{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
        "name": "[macOS] Main",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/out/main.js",
        "stopOnEntry": false,
        "args": [],
        "cwd": "${workspaceRoot}/dist",
        "runtimeExecutable": "${workspaceRoot}/dist/GitHub Desktop-dev-darwin-x64/GitHub Desktop-dev.app/Contents/MacOS/GitHub Desktop-dev",
        "runtimeArgs": [
            "--enable-logging"
        ],
        "env": {},
        "sourceMaps": true,
        "outFiles": [
          "${workspaceRoot}/out/**/*.js"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "console": "integratedTerminal"
    },
    {
        "name": "[macOS] Renderer",
        "type": "chrome",
        "request": "launch",
        "runtimeExecutable": "${workspaceRoot}/dist/GitHub Desktop-dev-darwin-x64/GitHub Desktop-dev.app/Contents/MacOS/GitHub Desktop-dev",
        "runtimeArgs": [
            "--enable-logging",
            "--remote-debugging-port=9222"
        ],
        "webRoot": "${workspaceRoot}/app",
        "sourceMaps": true,
        // "diagnosticLogging": true,
        "sourceMapPathOverrides": {
          "webpack:///*":   "${workspaceRoot}/*"
        },
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": [
        "node_modules/react/*.min.js"
      ]
    }
  ],
  "compounds": [
        {
            "name": "[macOS] Desktop",
            "configurations": ["[macOS] Main", "[macOS] Renderer"]
        }
    ]
}
